<%- include('../includes/head.ejs') %>
   <link rel="stylesheet" href="/Styles/home.css">
   <link rel="stylesheet" href="/Styles/add-product.css">
</head>
<%- include('../includes/navigation.ejs') %>

   <div class="main">
      <div class="adjust">
         <form action="/admin/<% if (editMode) { %>edit-product<% } else { %>add-product<% } %>" method="POST" class="formCon">
         <div class="title">
            <label for="prodName">Title</label>
            <input type="text" name="prodName" class="inputArea" value="<%if(editMode){%><%=product.title%><%}%>">
         </div>
         <div class="Description">
            <label for="prodDescription">Description</label>
            <input type="text" name="prodDescription" class="inputArea" value="<%if(editMode){%><%=product.description%><%}%>">
         </div>
         <div class="Season">
            <label for="prodYear">Year</label>
            <input type="text" name="prodSeason" class="inputArea" value="<% if(editMode){%><%=product.year%><%}%>">
         </div>
         <div class="ImageUrl">
            <label for="prodImageUrl">ImageUrl</label>
            <input type="text" name="prodImageUrl" class="inputArea" value="<%if(editMode){%><%=product.imageUrl%><%}%>">
         </div>
         <div class="Price">
            <label for="prodPrice">Price</label>
            <input type="text" name="prodPrice" class="inputArea" value="<% if(editMode){%><%=product.price%><%}%>">
         </div>
         <% if(editMode){ %>
            <input type="hidden" name = 'prodId' value = "<%=product._id%>"> 

         <%}%>   
         <input type="hidden" , name="_csrf" value = "<%=csrfToken %>">
         <button type="submit" class="buttonStyle"> <% if(editMode){ %>Edit Product<%}else{%>Add Product<%}%>   </button>
      </form>
      </div>
   </div>

<%- include('../includes/end.ejs') %>